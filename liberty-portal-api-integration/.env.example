NODE_ENV=development
PORT=3000

# OAuth2 / JWT
JWT_ISSUER=https://auth.example.com/
JWKS_URI=https://auth.example.com/.well-known/jwks.json
JWT_AUDIENCE=liberty-portal
# Optional HS256 fallback
# JWT_HS256_SECRET=change-me

# API keys list: name:key pairs
API_KEYS=service1:myapikey1,service2:myapikey2

# AES-256-GCM key (32 bytes, hex)
ENCRYPTION_KEY_HEX=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Redis
REDIS_URL=redis://redis:6379

# Region-specific DB URLs (for real DBs in prod)
DB_SG_URL=postgres://user:pass@db-sg:5432/liberty
DB_HK_URL=postgres://user:pass@db-hk:5432/liberty
DB_AU_URL=postgres://user:pass@db-au:5432/liberty

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

